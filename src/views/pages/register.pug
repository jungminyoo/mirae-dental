extends ../base

block content
    .register
        h1=pageTitle
        if errorMessage
            span=errorMessage
        form.admin(method="POST")
            .input_container
                label(for="name") 이름
                input.input#name(name="name", type="text", required, placeholder="이름")
                label(for="username") 아이디
                input.input#username(name="username", type="text", required, placeholder="아이디")
                label(for="password") 비밀번호
                input.input#password(name="password", type="password", required, placeholder="비밀번호", minlength="7", maxlength="15")
                label(for="password_confirm") 비밀번호 확인
                input.input#password-confirm(name="password_confirm", type="password", required, placeholder="비밀번호 확인", minlength="7", maxlength="15")
                label(for="register_code") 가입코드
                input.input#register-code(name="register_code", type="password", required, placeholder="가입코드")
                input#submit(type="submit", value="관리자 가입")